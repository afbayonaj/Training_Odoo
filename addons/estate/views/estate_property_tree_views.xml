<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/> 
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', False)]"/>
                <filter string="Available Properties" 
                    name="state" 
                    domain="['|',('state', '=', 'new'), ('state', '=', 'offer received')]"
                    />
                <group expand="1" string="Group By">
                    <filter string="Post Code" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree.views</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Property" 
                decoration-success="state in ('offer received', 'offer accepted')" 
                decoration-bf="state == 'offer accepted'" 
                decoration-muted="state == 'sold'"
                >
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban.views</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by='property_type_id' records_draggable='false'>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <h3><field name="name"/></h3>
                            <div class="kanban-field">
                                <span class="kanban-label">Expected Price:</span>
                                <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer received'">
                                <span class="kanban-label">Best Price:</span>
                                <field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer accepted'">
                                <span class="kanban-label">Selling Price:</span>
                                <field name="selling_price"/>
                            </div>
                            <field name="state" invisible="1"/>
                            <field name="property_type_id" invisible="1"/>
                            <field name="id" invisible="1"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>